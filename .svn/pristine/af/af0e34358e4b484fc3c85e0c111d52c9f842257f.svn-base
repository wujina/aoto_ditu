<%@ page language="java" contentType="text/html; charset=utf-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<form class="form-grid" id="frmChangePassword">
  <div class="title">
    <fmt:message key="user.changePassword" />
  </div>
  <div class="form-group">
    <div class="col-3 control-label">
      <label for="oldPassword"><fmt:message key="user.oldPassword" /><span class="required">*</span> <fmt:message key="colon" /></label>
    </div>
    <div class="col-1"></div>
    <div class="col-6">
      <input class="easyui-validatebox form-control" data-options="required:true,validType:'password',novalidate:true" id="oldPassword" name="oldPassword" type="password" />
    </div>
    <div class="col-2"></div>
  </div>
  <div class="form-group">
    <div class="col-3 control-label">
      <label for=newPassword><fmt:message key="user.newPassword" /><span class="required">*</span> <fmt:message key="colon" /></label>
    </div>
    <div class="col-1"></div>
    <div class="col-6">
      <input class="easyui-validatebox form-control" data-options="required:true,validType:'password',novalidate:true" id="newPassword" name="newPassword" type="password" />
    </div>
    <div class="col-2"></div>
  </div>
  <div class="form-group">
    <div class="col-3 control-label">
      <label for="confirmPassword"><fmt:message key="user.confirmPassword" /><span class="required">*</span> <fmt:message key="colon" /></label>
    </div>
    <div class="col-1"></div>
    <div class="col-6">
      <input class="easyui-validatebox form-control" data-options="required:true,validType:'password',novalidate:true" id="confirmPassword" name="confirmPassword" type="password" />
    </div>
    <div class="col-2"></div>
  </div>
</form>